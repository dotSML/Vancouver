@page

@using CustomerFolder
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Server.Kestrel.Core.Features
@using Models
@model MyAccountModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "MyAccount";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager 

<head>
    <link href="~/css/bootstrapIndex.css" rel="stylesheet" />
    <link href="css/myAccount.css" rel="stylesheet" />
    <script src="lib/jquery/dist/jquery.js"></script>
</head>

<style>
    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .usrImgContainer:hover .image {
        opacity: 0.3;
    }

    .usrImgContainer:hover .middle {
        opacity: 1;
    }

    .image {
        opacity: 1;
        display: block;
        width: 100%;
        transition: .5s ease;
        backface-visibility: hidden;
    }
    
    
</style>

<body>
<div class="container" style="box-shadow: black">
    <div class="profile-sector">
        <div class="profile-sector-column" style="position: relative;">
            @{
                if (UserManager.GetUserAsync(User).Result.UserPhoto == null)
                {
                    <form method="post" enctype="multipart/form-data">
                        <input type="file" style="margin: 0" class="file btn-dark" asp-for="Upload" />
                        <button style="margin-top: 10px;" class="btn btn-primary" type="submit">Upload</button>
                    </form>
                }
                else
                {
                    <div class="usrImgContainer" style="position: relative;">
                        <img class="image" style="border: black; border-radius: 7px;" src="~/uploads/usrImg/@UserManager.GetUserAsync(User).Result.UserPhoto" alt="No Profile Pic">
                        <div class="middle" style="position: absolute; top: 200px; left: 130px;">
                            <form method="post" enctype="multipart/form-data">
                                <input type="file" class="file" asp-for="Upload" />
                                <button class="btn btn-primary" type="submit">Upload</button>
                                
                            </form>
                            <div style="margin-top: 10px;">
                                <form method="post">
                                    <button id="deleteUserPhoto" type="submit" asp-page-handler="DeletePhoto" class="btn btn-danger">Delete Photo</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="profile-sector-column">
            <div>Full name</div>
            <div style="font-size: 18px;">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</div>
            <hr />
            <div>Email</div>
            <div style="font-size: 18px;">@UserManager.GetUserAsync(User).Result.Email</div>
            <hr />
            <div>Phone number</div>
            <div style="font-size: 18px;">@UserManager.GetUserAsync(User).Result.PhoneNumber</div>
            <hr />

            <div>Favourite destinations </div>
            <hr />
            <a class="btn btn-dark" href="/Identity/Account/Manage">Manage Profile</a>
        </div>
        <div class="profile-sector-column">
                
        </div>
    </div>
        
</div>

</body>

