@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<body>
<link href="~/css/bootstrapIndex.css" rel="stylesheet" />
<div class="vertical-center">
    <form>
        
    <div class="row align-items-center" style="position: absolute; top: 300px; background-color: rgba(0, 0, 0, 0.3); padding-top: 8px; border-radius: 7px">
        <div class="col-auto">
            <label class="sr-only" for="inlineFormInputDepart">Departure</label>
            <input type="text" class="form-control mb-2" id="inlineFormInputDepart" placeholder="Departure">
        </div>
        <div class="col-auto">
            <label class="sr-only" for="inlineFormInputArrive">Arrival</label>
            <input type="text" class="form-control mb-2" id="inlineFormInputArrive" placeholder="Arrival">
        </div>
        <div class="col-auto">
            <label class="sr-only" for="inlineFormInputOut">Outbound</label>
            <input type="text" class="form-control mb-2" id="inlineFormInputOut" placeholder="Outbound">
        </div>
        <div class="col-auto" style="border: black">
            <label class="sr-only" for="inlineFormInputIn">Inbound</label>
            <input type="text" class="form-control mb-2" id="inlineFormInputIn" placeholder="Inbound">
        </div>
        <div class="col-auto" style="padding-bottom: 8px">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
    </form>
</div>
</body>


