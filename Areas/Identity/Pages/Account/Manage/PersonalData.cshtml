@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h1 style="color: white; font-size: 25px;">@ViewData["Title"]</h1>

<div class="flex" style="background: rgba(0, 0, 0, 0.8); border-radius: 7px; position: relative; padding: 20px; margin: 20px; height: 420px;">
    <div class="row">
        <div class="col-md-5">
            <partial name="_ManageNav"/>
        </div>
        <div class="col-md-6" style="color: white;">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
            <form asp-page="DownloadPersonalData" method="post" class="form-group" style="margin-top: 10px;">
                <button class="btn btn-primary" type="submit">Download</button>
            </form>
            <p>
                <a asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
            </p>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}