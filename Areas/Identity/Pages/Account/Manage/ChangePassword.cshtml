@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<style>
    .pwLabel {
        color: white;
        font-size: 15px;
    }
</style>

<h2 style="font-size: 25px; color: white;">@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="flex niceShadow" style="background: rgba(0, 0, 0, 0.8); border-radius: 7px; height: 420px; padding: 20px; margin: 20px;">
    <div class="row">
        <div class="col-md-5">
            <partial name="_ManageNav"/>
        </div>
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="pwLabel" asp-for="Input.OldPassword"></label>
                    <input asp-for="Input.OldPassword" class="form-control"/>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="pwLabel" asp-for="Input.NewPassword"></label>
                    <input asp-for="Input.NewPassword" class="form-control"/>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="pwLabel" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update password</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
