@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}




<div class="flex niceShadow" style="background: rgba(0, 0, 0, 0.8); border-radius: 7px; padding: 20px; margin: 20px; position: relative;">
    <div style="position: absolute; bottom: 10px; right: 20px;">
        <a href="/Identity/Account/Manage/PersonalData">Go Back</a>
    </div>
    <div class="row">
        <div class="col">
            <div class="alert alert-warning" role="alert">
                <p>
                    <span class="glyphicon glyphicon-warning-sign"></span>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>
            <form id="delete-user" method="post" class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}